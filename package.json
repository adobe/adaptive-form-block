{
  "name": "adaptiveform",
  "type": "module",
  "version": "0.0.1",
  "description": "Adaptive Form Block for AEM Form",
  "source": "src/lite.ts",
  "scripts": {
    "clear": "rimraf dist",
    "package": "renamer --chain bundle.mjs dist/* ",
    "bundle": "microbundle --format=modern --sourcemap=false",
    "dev": "npm run clear &&  microbundle --format=modern --sourcemap=false --compress=false watch",
    "build": "npm run clear && npm run bundle && npm run package",
    "build:debug": "npm run clear && npm run bundle && npm run package",
    "start": "node lib/index.js",
    "test": "jest --silent=false "
  },
  "author": "Vijay Kumar J (jalagari@adobe.com)",
  "license": "ISC",
  "dependencies": {
    "@aemforms/af-core": "^0.22.16",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "cross-env": "^7.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^15.0.0",
    "microbundle": "^0.15.1",
    "renamer": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3"
  }
}
