{
  "name": "adaptiveform",
  "type": "module",
  "version": "0.0.1",
  "description": "Adaptive Form Block for AEM Form",
  "main": "src/adaptiveform.ts",
  "scripts": {
    "clear": "rimraf dist",
    "package": "renamer --chain bundle.mjs dist/* ",
    "bundle": "microbundle --format=modern --sourcemap=false",
    "dev": "npm run clear &&  microbundle --format=modern --sourcemap=false --compress=false watch",
    "build": "npm run clear && npm run bundle && npm run package",
    "build:debug": "npm run clear && npm run bundle && npm run package",
    "start": "node lib/index.js",
    "build1": "tsc",
    "build2": "rimraf lib && node ./esbuild.js && npm run ts-types",
    "test": "wtr \"./test/**/*.test.js\" --node-resolve --port=2000 --coverage",
    "test:watch": "npm test -- --watch",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'styles/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "update:core": "rollup -c rollup/af-core.config.js",
    "update:formatters": "rollup -c rollup/af-formatters.config.js",
    "update:formula": "rollup -c rollup/json-formula.config.js",
    "update:all" : "npm run update:core && npm run update:formula && npm run update:formatters"
  },
  "author": "Vijay Kumar J (jalagari@adobe.com)",
  "license": "ISC",
  "devDependencies": {
    "@adobe/json-formula": "0.1.50",
    "@aemforms/af-core": "file:///Users/varundua/codebase/af2-web-runtime/packages/forms-next-core",
    "@aemforms/af-formatters": "file:///Users/varundua/codebase/af2-web-runtime/packages/forms-next-formatters",
    "@babel/eslint-parser": "^7.19.1",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/jest": "^29.2.3",
    "@web/test-runner": "^0.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "microbundle": "^0.15.1",
    "renamer": "^4.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "stylelint": "^14.16.1",
    "wtr": "^1.0.4"
  }
}
